<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:background="@color/yellow">

    <TextView
        android:id="@+id/saveAl"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="percent off"
        android:textColor="@color/blue"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/deliveryAl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100% off"
        android:textColor="@color/blue"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saveAl"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/completeAl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/t_c"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deliveryAl"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/cityAl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100% off"
        android:textColor="@color/blue"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/completeAl"
        android:layout_margin="10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectAl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cityAl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="Select"
        android:textColor="@color/black"
        android:elevation="10dp"
        android:backgroundTint="@color/blue"
        android:layout_gravity="center_horizontal" />



</androidx.constraintlayout.widget.ConstraintLayout>